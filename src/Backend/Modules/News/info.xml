<module>
	<name>News</name>
	<version>1.0.0</version>
	<requirements>
		<minimum_version>3.8.4</minimum_version>
	</requirements>
	<description>
		<![CDATA[
			Multi language News module
		]]>
	</description>
	<authors>
		<author>
			<name><![CDATA[Mathias Dewelde]]></name>
			<url><![CDATA[http://www.studiorauw.be]]></url>
		</author>
	</authors>
  <events>
    <event application="backend" name="after_add"><![CDATA[Triggered when an article is added.]]></event>
    <event application="backend" name="after_delete"><![CDATA[Triggered when an article is deleted.]]></event>
    <event application="backend" name="after_edit"><![CDATA[Triggered when an article is edited.]]></event>
    <event application="backend" name="after_add_category"><![CDATA[Triggered when a category is added.]]></event>
    <event application="backend" name="after_delete_category"><![CDATA[Triggered when a category is deleted.]]></event>
    <event application="backend" name="after_edit_category"><![CDATA[Triggered when a category is edited.]]></event>
    <event application="backend" name="after_saved_settings"><![CDATA[Triggered when the settings are saved.]]></event>
  </events>
</module>
